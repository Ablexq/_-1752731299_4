.ft10 {
    font-size: 10px;
}

page {
    background: #f3f4f5;
}

.nav {
    height: 80rpx;
    line-height: 80rpx;
}

.nav text {
    display: block;
    width: 60%;
    margin: 0 auto;
}

.nav view.active {
    color: #f03e3e;
    border-bottom: 1px solid #f03e3e;
}

.nav .num {
    top: 4px;
    right: -28%;
    width: 18px;
    height: 18px;
    line-height: 18px;
    background: #f03e3e;
    border-radius: 50%;
}

.content {
    padding: 100rpx 30rpx 100rpx;
}

.content .info {
    padding: 30rpx 0 20rpx 40rpx;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.quan.normal .price {
    color: #f03e3e;
}

.quan.dog .price {
    color: #4d9b35;
}

.quan.cat .price {
    color: #e72087;
}

.quan .price image {
    width: 40rpx;
    height: 40rpx;
    margin-top: 25rpx;
}

.quan .price .num {
    font-size: 30px;
}

.quan .price .name {
    top: 16rpx;
    left: 68%;
    font-size: 16px;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-left: 10rpx;
}

.quan .more {
    line-height: 20px;
}

.quan .more text {
    width: 30rpx;
    height: 30rpx;
    margin: 10rpx 5% 0 0;
    display: inline-block;
}

.quan .more .down {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/noimages/newCopuon_arrowdown.png') center center no-repeat;
    background-size: 30rpx 30rpx;
}

.sort {
    width: 34%;
    display: flex;
    align-items: center;
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_usedbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.quan.normal .sort {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_quanbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.quan.dog .sort {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_dbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.quan.cat .sort {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_cbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.sort .s-wrapper {
    width: 100%;
}

.content .tips {
    background: #fcfcfc;
    padding: 40rpx 30rpx;
    margin-top: -10rpx;
}

.sort .status {
    width: 166rpx;
    height: 166rpx;
    margin: 0 auto;
    top: 16%;
    left: 14%;
}

.quan .check {
    padding: 4rpx 8rpx;
    border-radius: 5px;
}

.quan .nocheck {
    padding: 4rpx 8rpx;
    border-radius: 5px;
    background: 0 0;
    color: #fff;
    border: 1px solid #fff;
}

.quan.normal .check {
    color: #f03e3e;
}

.quan.dog .check {
    color: #4d9b35;
}

.quan.cat .check {
    color: #e72087;
}

.confirm {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    line-height: 100rpx;
    background: #f03e3e;
}