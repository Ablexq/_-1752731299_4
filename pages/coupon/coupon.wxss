page {
    background: #f3f4f5;
}

.content {
    padding: 100rpx 30rpx 0;
}

.content .info {
    padding: 30rpx 0 20rpx 40rpx;
    border-top-left-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.quan.normal .price {
    color: #f03e3e;
}

.quan.dog .price {
    color: #4d9b35;
}

.quan.cat .price {
    color: #e72087;
}

.quan .price image {
    width: 40rpx;
    height: 40rpx;
    margin: -10rpx 0 0 0;
}

.quan .price .num {
    font-size: 30px;
}

.quan .price .name {
    top: 16rpx;
    left: 68%;
    font-size: 16px;
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 30%;
}

.quan .more {
    line-height: 20px;
}

.quan .more text {
    width: 30rpx;
    height: 30rpx;
    margin: 10rpx 5% 0 0;
    display: inline-block;
}

.quan .more .down {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/noimages/newCopuon_arrowdown.png') center center no-repeat;
    background-size: 30rpx 30rpx;
}

.sort {
    width: 32%;
    display: flex;
    align-items: center;
}

.quan.normal .sort {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_quanbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.quan.dog .sort {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_dbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.quan.cat .sort {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_cbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.quan.used .sort {
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/newCash_usedbg.jpg') center center no-repeat;
    background-size: 100% 100%;
}

.sort .s-wrapper {
    width: 100%;
}

.content .tips {
    background: #fcfcfc;
    padding: 40rpx 30rpx;
    margin-top: -10rpx;
}

.sort .status {
    width: 166rpx;
    height: 166rpx;
    margin: 0 auto;
    top: 16%;
    left: 14%;
}