.add-address-wrap {
    padding-bottom: 99rpx;
}

page {
    background: #f3f4f5;
}

.phcolor {
    color: #999;
}

.add-address-wrap .address-item {
    padding: 27rpx 0 30rpx 0rpx;
    margin-left: 30rpx;
    line-height: 50rpx;
}

.aname {
    width: 109rpx;
}

.picker {
    padding: 27rpx 0 30rpx 0rpx;
    margin-left: 30rpx;
    line-height: 50rpx;
}

.address-item input,.address-item view {
    width: 520rpx;
}

.address-item switch {
    right: 30rpx;
    bottom: 45rpx;
}

.address-item .showbtn {
    position: relative;
    z-index: 2;
}

.picker-wrap {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.5);
    z-index: 10;
}

.picker-addr {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 11;
}

.picker-addr .picker-btn {
    padding: 0 20rpx;
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 1px solid #e7e7e7;
}

.btn-submit {
    color: #5fcf48;
}

.picker-addr picker-view {
    height: 475rpx;
}

.add-btn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background: #f03e3e;
    height: 99rpx;
    line-height: 99rpx;
    text-align: center;
}

.add-btn-hover {
    background: #e42c2c;
}