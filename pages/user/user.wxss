page {
    width: 100%;
    height: 100%;
    background: #f5f5f5;
}

.flex-wrp {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 54rpx 0;
    background: url('https://static.epetbar.com/static_web/wap/dist/images/background/wxuser_bg.jpg');
    background-size: 100% 100%;
}

.flex-wrp .text {
    margin-left: 40rpx;
}

.flex-wrp image {
    width: 130rpx;
    height: 130rpx;
    margin-left: 50rpx;
    border-radius: 50%;
}

.flex-wrp .text view {
    font-size: 14px;
    height: 50rpx;
    line-height: 50rpx;
}

.bar {
    font-size: 14px;
}

.bar .user-item {
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 30rpx;
    background: #fff;
}

.bar .icon {
    width: 36rpx;
    height: 36rpx;
    vertical-align: top;
    margin-top: 34rpx;
    margin-right: 20rpx;
}

.bar .icon-address {
    width: 32rpx;
    height: 40rpx;
}

.arrowR {
    position: relative;
}

.arrowR:after {
    position: absolute;
    content: '';
    width: 20rpx;
    height: 20rpx;
    right: 30rpx;
    top: 38rpx;
    border-top: 1px solid #e7e7e7;
    border-right: 1px solid #e7e7e7;
    transform: rotate(45deg);
}

.medal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    padding: 0 5%;
}

.medal .wrapper {
    margin: 50% auto 0;
    border-radius: 5px;
    padding: 30rpx 10% 40rpx 5%;
}

.medal .photo-pic {
    width: 160rpx;
    height: 160rpx;
    margin-right: 20rpx;
}

.tips {
    border-top: 1px dashed #e7e7e7;
}

.call {
    margin-top: 30rpx;
}

.call text {
    display: inline-block;
    background: #f03e3e;
    padding: 10rpx 100rpx;
    border-radius: 5px;
}

.name {
    margin-left: 30rpx;
    line-height: 130rpx;
}